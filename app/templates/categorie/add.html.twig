{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.add'|trans }}
{% endblock %}

{% block body %}
    <div class="main-container">
        <header>
            {% block header %}
                <div class="logo">
                    <a href="log.html">Budżet domowy</a>
                </div>
                <div class="witaj">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <p class="wyloguj">
                            <a href="{{ url('auth_logout') }}" title="{{ 'auth.logout.label'|trans }}">
                                {{ 'auth.logout.label'|trans }}
                            </a>
                        </p>
                        <p class="imie">{{ 'hello'|trans }} {{ app.user.username }},</p>
                    {% endif %}
                </div>
                <div class="history">
                    <p><a titile="Historia" href=""> {{ 'new.category'|trans }} </a></p>
                </div>
            {% endblock %}
        </header>
        <div class="akcje">
            <h1>{{ 'title.add'|trans }}</h1>
            <div class="form">
                {{ form_start(form, { method: 'post', action: url('categorie_add') }) }}
                {{ form_widget(form) }}
            </div>
            <input type="submit" value="{{ 'action.save'|trans }}" class="zapisz" />
            {{ form_end(form) }}
            <a class ="wroc" href="{{ url('categorie_index') }}" title="{{ 'back.to.list'|trans }}">
                {{ 'back.to.list'|trans }}
            </a>
        </div>
        <footer>
            {% block footer %}
                <p>Projekt z systemu interaktywnego EPI 2017. Projekt i realizacja: Kinga Bożęcka</p>
            {% endblock %}
        </footer>
    </div>
{% endblock %}